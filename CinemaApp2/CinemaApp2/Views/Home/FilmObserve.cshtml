@model Film

@{
    ViewData["Title"] = "Film Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 mb-3">
            <h2 class="display-4">@Model.Name</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <img src="@(!string.IsNullOrEmpty(Model.ImgURL) ? Model.ImgURL : "https://static.vecteezy.com/system/resources/previews/005/337/799/non_2x/icon-image-not-found-free-vector.jpg")" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <div class="mb-4">
                <h5 class="text-muted">Description</h5>
                <p class="lead">@Model.Description</p>
            </div>
            <div class="mb-3">
                <h5 class="text-muted">Release Date</h5>
                <p class="lead">@Model.ReleaseDate.ToString("yyyy-MM-dd")</p>
            </div>
            <div class="mb-3">
                <h5 class="text-muted">Genre</h5>
                <p class="lead">@Model.Genre.Name</p>
            </div>
            <div class="mt-4">
                <a asp-action="FilmObserve" class="btn btn-dark btn-lg">Go Back</a>
            </div>
        </div>
    </div>
</div>
