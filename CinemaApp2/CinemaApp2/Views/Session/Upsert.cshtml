@model CinemaApp2.Models.SessionFormModel
@{
    bool isCreate = ViewBag.Creation ?? false;
}

<h2>@(isCreate ? "Create" : "Edit") Session</h2>


<form asp-action="@(isCreate ? "Create" : "Edit")">
    <div class="form-group">
        <label asp-for="ShowTime" class="control-label"></label>
        <input asp-for="ShowTime" class="form-control" />
        <span asp-validation-for="ShowTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FilmId" class="form-label">Film</label>
        <select asp-for="FilmId" asp-items="ViewBag.Films" id="inputState" class="form-select">
            <option selected>Choose...</option>
        </select>
        <span asp-validation-for="FilmId" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HallId" class="form-label">Hall</label>
        <select asp-for="HallId" asp-items="ViewBag.Halls" id="inputState" class="form-select">
            <option selected>Choose...</option>
        </select>
        <span asp-validation-for="HallId" class="small text-danger"></span>
    </div>
    <div class="col-6">
        <a asp-action="Index" class="btn btn-dark w-100">Go Back</a>
    </div>
        @if (isCreate)
        {
            <button type="submit" class="btn btn-success w-100">Create</button>
        }
        else
        {
            <button type="submit" class="btn btn-warning w-100">Edit</button>
        }
</form>