@model SessionsAndFilmsViewModel

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Films</h1>
        <a asp-controller="Session" asp-action="CreateFilm" class="btn btn-primary ml-3">Add film</a>
        <a asp-controller="Session" asp-action="Index" class="btn btn-primary ml-3">Back to sessions</a>
    </div>
</div>


<div class="scrollable-table">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Release Date</th>
                <th>Genre</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var film in Model.Films)
            {
                <tr>
                    <td>@film.Name</td>
                    <td>@film.ReleaseDate.ToString("yyyy-MM-dd")</td>
                    <td>@film.Genre.Name</td>
                    <td>@film.Description</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a asp-controller="Home" asp-action="FilmObserve" asp-route-id="@film.Id" class="btn btn-secondary">
                                <i class="bi bi-info-circle-fill"></i>
                                <span>Film Info</span>
                            </a>

                            <a asp-action="EditFilm" asp-route-id="@film.Id" type="button" class="btn btn-warning">
                                <i class="bi bi-pencil-fill"></i>
                                <span>Edit</span>
                            </a>
                            <a asp-action="DeleteFilm" asp-route-id="@film.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i>
                                <span>Delete</span>
                            </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>