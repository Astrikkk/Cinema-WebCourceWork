@model IEnumerable<CinemaApp2.Models.OrderViewModel>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Orders</h1>
        <a asp-controller="Session" asp-action="Index" class="btn btn-primary ml-3">Back to sessions</a>
    </div>
</div>

<div class="scrollable-table mt-4">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Customer Email</th>
                <th>Customer Phone</th>
                <th>Seats</th>
                <th>Film</th>
                <th>Hall</th>
                <th>Show Time</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.CustomerName</td>
                    <td>@order.CustomerEmail</td>
                    <td>@order.CustomerPhone</td>
                    <td>@order.Seats</td>
                    <td>@order.FilmName</td>
                    <td>@order.HallName</td>
                    <td>@order.ShowTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@order.Price</td>
                    <td>
                        <form asp-action="DeleteOrder" method="post">
                            <input type="hidden" name="id" value="@order.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

